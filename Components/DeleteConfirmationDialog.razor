@inject IDialogService DialogService

<MudDialog>
    <MudDialogTitle>Delete Confirmation</MudDialogTitle>
    <MudDialogContent>
        Are you sure you want to delete this product?
    </MudDialogContent>
    <MudDialogActions>
        <MudButton OnClick="ConfirmDelete" Color="Color.Error">Yes</MudButton>
        <MudButton OnClick="CancelDelete" Color="Color.Default">No</MudButton>
    </MudDialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    private void ConfirmDelete()
    {
        MudDialog.Close(DialogResult.Ok(true)); // Close the dialog and pass a success result
    }

    private void CancelDelete()
    {
        MudDialog.Cancel(); // Close the dialog and mark it as canceled
    }
}
